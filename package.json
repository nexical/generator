{
  "name": "@nexical/generator",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "description": "Nexical Generator CLI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "build": "npm run clean && tsc -b tsconfig.build.json",
    "dev": "tsc -w",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:unit:watch": "vitest -c vitest.unit.config.ts",
    "test:unit:coverage": "vitest run -c vitest.unit.config.ts --coverage",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:integration:watch": "vitest -c vitest.integration.config.ts",
    "test": "npm run test:unit && npm run test:integration",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@nexical/ai": "^0.1.5",
    "@nexical/cli-core": "^0.1.16",
    "commander": "^14.0.3",
    "minimist": "^1.2.8",
    "prettier": "^3.8.1",
    "ts-morph": "^27.0.2",
    "xml2js": "^0.6.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/inquirer": "^9.0.9",
    "@types/minimist": "^1.2.5",
    "@types/node": "^25.3.0",
    "@types/nunjucks": "^3.2.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.6.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0"
  },
  "types": "dist/index.d.ts"
}
