{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "sourceMap": true,
    "declaration": true,
    "composite": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "paths": {
      "@nexical/generator": ["./src/index.ts"]
    }
  },
  "include": ["src/**/*", "templates/**/*"],
  "exclude": ["node_modules", "dist"]
}
